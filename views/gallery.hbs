<!DOCTYPE html>
<html>
<head>                       
	<script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
	<script src="galleria/galleria-1.5.7.min.js"></script>
	<script type='text/javascript' src='javascripts/page.js'></script>
	<script type='text/javascript' src='javascripts/clock.js'></script>
	<!-- Clock https://github.com/cer/nodejs-clock/tree/master/distributed/nodejs-clock -->	
	<script src="javascripts/knockout-2.0.0.js"></script>
	<link rel="stylesheet" href="stylesheets/page.css">
	
	<!-- calendar  
	
	https://fullcalendar.io/
	
	-->
	
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<!-- temporary styles-->
	<style>
		div.widget-overlay {min-height:100%; min-width:100%;position:absolute; z-index: 10001;overflow:hidden;}
		#calendar {max-height: 200px;overflow: hidden; 2rem auto; padding: 0 5px;}
		#bg-img {top:0; left:0; min-width:100%; position:absolute;}
		
		body {overflow: hidden;}
		.panel {width: 50%; max-height: 200px; float: left; display: inline-block; text-align:center;}
		#clock-widget {width: 100%; text-align: center}
		#clock-widget span {font-size: 4em;}
		#message, #debug {display:none;}
		#calendar-widget {bottom: 0; position: absolute;}
		#weather-widget {bottom: 0; left: 50%; position: absolute;}
	</style>

</head>
<body>
	<div class="galleria">
		{{#each imgs}}
		<img src="{{this}}">
		{{/each}}
	</div>
	<div class="widget-overlay">
		<div id="clock-widget panel panel-default">
			<span class="panel-body" data-bind="text: ticker"></span>
		</div>
		<div class="panel panel-default" id="calendar-widget">
			<span id="script-warning"></span>
			<script>
				document.getElementById("loc_name").innerHTML = obj.weather_data.current.observationpoint;
				document.getElementById("temp").innerHTML = obj.weather_data.current.temperature + 'F';
				document.getElementById("feelslike").innerHTML = obj.weather_data.current.feelslike + 'F';
				document.getElementById("humidity").innerHTML = obj.weather_data.current.humidity + '%';
				document.getElementById("skytext").innerHTML = obj.weather_data.current.skytext;
				document.getElementById("skytext").innerHTML = obj.weather_data.current.winddisplay;
				document.getElementById("image").src = obj.weather_data.current.imageUrl;
			</script>
			<div class="panel-body" id="calendar">
				<span id="loc_name"></span>
				<span id="temp"></span>
				<span id="feelslike"></span>
				<span id="skytext"></span>
				<span id="loc_name"></span>
				<img id="image" src="">
			</div>
		</div>
		<div class="panel panel-default" id="weather-widget">
  			<div class="panel-body" id="weather"></div>
		</div>
	</div>
</body>
</html>
